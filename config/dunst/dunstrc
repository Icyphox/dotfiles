[global]
    font = Roboto Mono Medium 14
    allow_markup = yes
    plain_text = no
    format = "%s\n%b"
    sort = yes
    indicate_hidden = yes
    alignment = left
    bounce_freq = 0
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = no
    geometry = "300x5-20+28"
    shrink = no
    transparency = 0
    transparency = 40
    idle_threshold = 120
    monitor = 0
    sticky_history = yes
    history_length = 20
    show_indicators = yes
    line_height = 0
    notification_height = 0
    separator_height = 2
    padding = 20
    # Horizontal padding.
    horizontal_padding = 20
    separator_color = frame
    startup_notification = false

    # dmenu path.
    dmenu = /usr/bin/dmenu -p dunst:

    # Browser for opening urls in context menu.
    browser = /usr/bin/firefox -new-tab

    # Align icons left/right/off
    icon_position = off
   

    # Paths to default icons.
    icon_folders = /usr/share/icons/gnome/16x16/status/:/usr/share/icons/gnome/16x16/devices/

[frame]
    width = 4
    width = 3
    color = "#4d4d4c"

[shortcuts]
    close = ctrl+space
    # Close all notifications.
    close_all = alt+shift+space
    history = ctrl+grave
    # Context menu.
    context = ctrl+shift+period

[urgency_low]
    # IMPORTANT: colors have to be defined in quotation marks.
    # Otherwise the "#" and following would be interpreted as a comment.
    background = "#4d4d4c"
    foreground = "#ffffff"
    timeout = 5

[urgency_normal]
    background = "#4d4d4c"
    foreground = "#ffffff"
    timeout = 5

[urgency_critical]
    background = "#1111111"
    foreground = "#dddddd"
    timeout = 5

